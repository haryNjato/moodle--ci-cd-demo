version: "3.8"

services:
  mariadb:
    image: mariadb:10.11
    container_name: mariadb_moodle
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: moodle
      MYSQL_USER: moodle
      MYSQL_PASSWORD: moodle
    volumes:
      - mariadb_data:/var/lib/mysql

  moodle:
    image: moodle:4.5.2-apache
    container_name: moodle_app
    restart: always
    ports:
      - "8080:80"
    environment:
      MOODLE_DB_HOST: mariadb
      MOODLE_DB_USER: moodle
      MOODLE_DB_PASSWORD: moodle
      MOODLE_DB_NAME: moodle
    depends_on:
      - mariadb
    volumes:
      - moodle_data:/var/www/html

volumes:
  mariadb_data:
  moodle_data:
