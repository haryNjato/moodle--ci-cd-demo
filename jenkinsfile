pipeline {
    agent any
    stages {
        stage('Récupération du code') {
            steps {
                checkout scm // Jenkins télécharge votre code GitHub ici
            }
        }
        stage('Déploiement Docker') {
            steps {
                echo 'Lancement des conteneurs depuis le Workspace...'
                // Pas besoin de chemin absolu ici, car le fichier est dans le workspace
                sh 'sudo docker-compose up -d --build moodle_app'
            }
        }
        stage('Nettoyage') {
            steps {
                sh 'sudo docker ps'
            }
        }
    }
}
