pipeline {
    agent any
    stages {
        stage('Déploiement Docker') {
            steps {
                echo 'Mise à jour du conteneur Moodle via le fichier spécifique...'
                // L'option -f permet de pointer vers le fichier exact
                sh 'sudo docker-compose -f /home/ernest/moodle/docker-compose.yml up -d --build moodle_app'
                
                echo 'Vérification du statut...'
                sh 'sudo docker ps'
            }
        }
    }
}
